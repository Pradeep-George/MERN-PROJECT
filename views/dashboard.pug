head
  // Required meta tags
  meta(charset='utf-8')
  meta(name='viewport' content='width=device-width, initial-scale=1, shrink-to-fit=no')
  title Foodie Admin
  // plugins:css
  link(rel='stylesheet' href='vendors/feather/feather.css')
  link(rel='stylesheet' href='vendors/ti-icons/css/themify-icons.css')
