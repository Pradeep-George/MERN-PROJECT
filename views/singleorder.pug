  link(rel='shortcut icon' href='/images/favicon.png')
.container-scroller
  // partial:partials/_navbar.html
  nav.navbar.col-lg-12.col-12.p-0.fixed-top.d-flex.flex-row
    .text-center.navbar-brand-wrapper.d-flex.align-items-center.justify-content-center
      a.navbar-brand.brand-logo.mr-5(href='/')
        img.mr-2(src='/images/logo.svg' alt='logo')
      a.navbar-brand.brand-logo-mini(href='/')
        img(src='/images/logo-mini.svg' alt='logo')
    .navbar-menu-wrapper.d-flex.align-items-center.justify-content-end
      button.navbar-toggler.navbar-toggler.align-self-center(type='button' data-toggle='minimize')
        span.icon-menu
      ul.navbar-nav.mr-lg-2
        li.nav-item.nav-search.d-none.d-lg-block
          .input-group
            #navbar-search-icon.input-group-prepend.hover-cursor
              span#search.input-group-text
                i.icon-search
            input#navbar-search-input.form-control(type='text' placeholder='Search now' aria-label='search' aria-describedby='search')
      ul.navbar-nav.navbar-nav-right
        li.nav-item.nav-profile.dropdown
          a#profileDropdown.nav-link.dropdown-toggle(href='#' data-toggle='dropdown') Settings
          .dropdown-menu.dropdown-menu-right.navbar-dropdown(aria-labelledby='profileDropdown')
            a.dropdown-item(href='/logout')
              i.ti-power-off.text-primary
              |                 Logout
        li.nav-item.nav-settings.d-none.d-lg-flex
          a.nav-link(href='#')
            i.icon-ellipsis
      button.navbar-toggler.navbar-toggler-right.d-lg-none.align-self-center(type='button' data-toggle='offcanvas')
        span.icon-menu
  // partial
  .container-fluid.page-body-wrapper
    // partial:partials/_settings-panel.html
    .theme-setting-wrapper
      #settings-trigger
        i.ti-settings
      #theme-settings.settings-panel
        i.settings-close.ti-close
        p.settings-heading SIDEBAR SKINS
        #sidebar-light-theme.sidebar-bg-options.selected
          .img-ss.rounded-circle.bg-light.border.mr-3
          | Light
        #sidebar-dark-theme.sidebar-bg-options
          .img-ss.rounded-circle.bg-dark.border.mr-3
          | Dark
        p.settings-heading.mt-2 HEADER SKINS
        .color-tiles.mx-0.px-4
          .tiles.success
          .tiles.warning
          .tiles.danger
          .tiles.info
          .tiles.dark
          .tiles.default
    // partial
    // partial:partials/_sidebar.html
    nav#sidebar.sidebar.sidebar-offcanvas
      ul.nav
        li.nav-item
          a.nav-link(href='/')
            i.icon-grid.menu-icon
            span.menu-title Dashboard
        li.nav-item
          a.nav-link(data-toggle='collapse' href='#ui-basic' aria-expanded='false' aria-controls='ui-basic')
            i.icon-layout.menu-icon
            span.menu-title Product
            i.menu-arrow
          #ui-basic.collapse
            ul.nav.flex-column.sub-menu
              li.nav-item
                a.nav-link(href='/') Add Category
              li.nav-item
                a.nav-link(href='/') View Category
              li.nav-item
                a.nav-link(href='/') Add Product
              li.nav-item
                a.nav-link(href='/') View Product  
        li.nav-item
          a.nav-link(data-toggle='collapse' href='#ui-order' aria-expanded='false' aria-controls='ui-order')
            i.icon-layout.menu-icon
            span.menu-title Order
            i.menu-arrow
          #ui-order.collapse
            ul.nav.flex-column.sub-menu
            
              li.nav-item
                a.nav-link(href='/admin/order/view-orders') View Orders
        li.nav-item
          a.nav-link(data-toggle='collapse' href='#auth' aria-expanded='false' aria-controls='auth')
            i.icon-head.menu-icon
            span.menu-title Users
            i.menu-arrow
          #auth.collapse
            ul.nav.flex-column.sub-menu
              li.nav-item
                a.nav-link(href='/admin/user/add-user')  Add User 
              li.nav-item
                a.nav-link(href='/admin/user/view-users')  Manage User         
    // partial
    .main-panel
      .content-wrapper
        .row
          .col-12.grid-margin.stretch-card
            .card
              .card-body
                h4.card-title Order Details
                form.form-sample
                  p.card-description Order info
                  .row
                    .col-md-6
                      .form-group.row
                        label.col-sm-3.col-form-label Order Reference
                        .col-sm-9
                          label.col-sm-3.col-form-label.reference=reference
                    .col-md-6
                      .form-group.row
                        label.col-sm-3.col-form-label Customer Name
                        .col-sm-9
                          label.col-sm-3.col-form-label.customer_name=customer_name
                  .row
                    .col-md-6
                      .form-group.row
                        label.col-sm-3.col-form-label Amount
                        .col-sm-9
                          label.col-sm-3.col-form-label.customer_name=total
                    .col-md-6
                      .form-group.row
                        label.col-sm-3.col-form-label Date 
                        .col-sm-9
                          label.col-sm-3.col-form-label.date=created_at
                  p.card-description Address
                  .row
                    .col-md-6
                      .form-group.row
                        label.col-sm-3.col-form-label Delivery Address
                        .col-sm-9
                          label.col-sm-3.col-form-label.address_delivery=address_delivery
                    .col-md-6
                      .form-group.row
                        label.col-sm-3.col-form-label Invoice Address
                        .col-sm-9
                          label.col-sm-3.col-form-label.address_invoice=address_invoice
                  p.card-description Products
                  .row
                    .table-responsive
                      table.table.table-striped.table-borderless
                        thead
                          tr
                            th Product
                            th Price
                            th Quantity
                            th Total
                            th Status
                        tbody
                          each product in products
                            tr
                              td=product.product_name
                              td.font-weight-bold=product.unit_price
                              td=product.quantity
                              td=product.product_total
                              td.font-weight-medium
                                span.badge.badge-success=product.status
      footer.footer
        .d-sm-flex.justify-content-center.justify-content-sm-between
          span.text-muted.text-center.text-sm-left.d-block.d-sm-inline-block Copyright &copy; 2021. All rights reserved.
          span.float-none.float-sm-right.d-block.mt-1.mt-sm-0.text-center
            | Hand-crafted &amp; made with 
            i.ti-heart.text-danger.ml-1
      // partial
    // main-panel ends
  // page-body-wrapper ends
